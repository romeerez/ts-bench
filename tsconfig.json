{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "esbuild.config.js"],
  "exclude": ["node_modules"]
}
